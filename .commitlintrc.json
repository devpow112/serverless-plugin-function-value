{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "perf",
                "revert",
                "docs",
                "chore",
                "refactor",
                "test",
                "build"
            ]
        ]
    }
}
