{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "perf",
                "revert",
                "docs",
                "chore",
                "refactor",
                "test",
                "build"
            ]
        ],
        "header-max-length": [2, "always", 50],
        "body-max-line-length": [2, "always", 80],
        "footer-max-line-length": [2, "always", 80]
    }
}
